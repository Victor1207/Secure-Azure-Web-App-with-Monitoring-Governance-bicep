{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "7616733357771567254"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "norwayeast",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "rg-secure-webapp-bicep",
      "metadata": {
        "description": "Resource group name"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "asp-secure-webapp-bicep",
      "metadata": {
        "description": "App Service Plan name"
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "NODE|18-lts"
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "kv-secure-webapp-bicep"
    },
    "webAppName": {
      "type": "string",
      "defaultValue": "secure-webapp-bicep"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "F1",
        "tier": "Free"
      },
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]"
        },
        "httpsOnly": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2023-02-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "enableRbacAuthorization": true,
        "publicNetworkAccess": "Disabled"
      }
    }
  ]
}